<!DOCTYPE html>
<html>
<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <title>Developers Page</title>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <link rel='stylesheet' type='text/css'  href='css/style.css'>
</head>
<body>
    <h1>Developers</h1>

    <nav id="navigation-links">
        <ul>
            <li><a href="/">Games</a></li>
            <li><a href="/users">Users</a></li>
            <li><a href="/developers">Developers</a></li>
            <li><a href="/reviews">Reviews</a></li>
            <li><a href="/stats">Stats</a></li>
            
            
        </ul>
    </nav>

    <table id="developer-table">
        <thead>
            <tr>
                {{#each data.[0]}}
                    <th>{{@key}}</th>
                {{/each}}
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#each data}}
            <tr data-value={{this.idDeveloper}}>
                <td>{{this.idDeveloper}}</td>
                <td>{{this.name}}</td>
                <td>{{this.foundedDate}}</td>
                <td>{{this.country}}</td>
                <td><button onclick="deleteDeveloper({{this.idDeveloper}})">Delete</button></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <script src="./js/deleteDeveloper.js"></script>

    <h2>Add a Developer</h2>

    <form id="add-developer" method="post" action="/add-developer">

        <label for="name">Developer Name: </label>
        <input type="text" name="name" id="name">

        <label for="dateCreated">Date: </label>
        <input type="date" name="dateCreated" id="dateCreated">

        <label for="country">Country</label>
        <input type="text" name="country" id="country">

        <input type="submit">

    </form>
    
</body>
</html>